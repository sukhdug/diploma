function eventstop(e)
{var evt=(e)?e:((window.event)?window.event:null);if(evt.preventDefault)
{evt.stopPropagation();}
else
{evt.cancelBubble=true;}}
function hidemenu(classname)
{var menus=document.getElementsByClassName(classname);for(var i=0;i<menus.length;i++)
{if(menus[i].tagName=='div')menus[i].style.display='none';}}
var hideonclick=function(elem,display,clear,callback,event_name,close)
{if(!callback)callback=function(){};if(!close||typeof(close)!='function')close=function(){};if(!event_name||event_name==''||event_name=='undefined')event_name='mousedown';var body_el=document.getElementById('body');var element=typeof(elem)=='object'?elem:document.getElementById(elem);if(element.addEventListener)
{body_el.addEventListener(event_name,function()
{if(!element)return false;if(element.removeEventListener)element.removeEventListener('mousedown',function(){},false);callback();callback=function(){};close();if(clear!=false)element.innerHTML='';if(display=='')element.style.display='';else if(display!='undefined'&&display!=null)element.style.display='none';else if(element)element.parentNode.removeChild(element);},false);element.addEventListener(event_name,function(e){eventstop(e);},false);}
else
{body_el.attachEvent('on'+event_name,function()
{if(!element)return false;element.detachEvent('onmousedown',function(){});callback();callback=function(){};close();if(clear!=false)element.innerHTML='';if(display=='')element.style.display='';else if(display!='undefined'&&display!=null)element.style.display='none';else if(element)element.parentNode.removeChild(element);});element.attachEvent('on'+event_name,function(e){eventstop(e);});}}
var toggle_elements=Array();function clicktoggle(elem,target,display,event_name,callback_open,callback_close,toggleclass)
{var element=typeof(elem)=='object'?elem:document.getElementById(elem);if(!element)return false;var body_el=document.getElementById('body');if(!display||display==''||display=='undefined')display='block';toggleclass = toggleclass || 'active-toggle';var current_display=element.style.display;var el_list=document.getElementsByClassName(toggleclass);var l=el_list.length;while(l--)el_list[l].style.display="none";if(!callback_open||typeof(callback_open)!='function')callback_open=function(){};if(!callback_close||typeof(callback_close)!='function')callback_close=function(){};if(current_display=='none')
{element.style.display=display;callback_open();}
else
{callback_close();}
if(toggle_elements[elem+'-'+target.id]!=null)return false;toggle_elements[elem+'-'+target.id]=1;if(!event_name||event_name==''||event_name=='undefined')event_name='mousedown';if(element.className.indexOf(toggleclass)==-1)element.className+=' '+toggleclass;if(element.addEventListener)
{if(target)
{target.addEventListener(event_name,function(e){eventstop(e);},false);}
body_el.addEventListener(event_name,function()
{if(!element)return false;if(element.style.display!='none')element.style.display='none';callback_close();},false);element.addEventListener(event_name,function(e){eventstop(e);},false);}
else
{if(target)
{target.attachEvent('on'+event_name,function(e){eventstop(e);},false);}
body_el.attachEvent('on'+event_name,function()
{if(!element)return false;if(element.style.display!='none')element.style.display='none';callback_close();});element.attachEvent('on'+event_name,function(e){eventstop(e);});}}
function show_genres_popup()
{var more_el=document.getElementById('menu-more-genres');var footer=document.getElementsByClassName('footer')[0]
if(more_el.offsetLeft>0)
{more_el.style.display='none';footer.insertBefore(more_el,footer.firstChild);}
else
{document.getElementsByClassName('menu-main')[0].appendChild(more_el);more_el.style.display='block';}
eventstop();}
